  "dependencies": {
    "@mysten/sui": "^1.45.2",
    "fastify": "^5.1.0",
    "socket.io": "^4.8.1",
    "pg": "^8.16.3",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "@types/pg": "^8.15.6",
    "@types/jest": "^30.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "eslint": "^9.17.0"
  }
