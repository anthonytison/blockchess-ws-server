{
  "name": "blockchess-ws-server",
  "version": "1.0.0",
  "description": "Standalone Socket.IO server for BlockChess blockchain transactions",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
